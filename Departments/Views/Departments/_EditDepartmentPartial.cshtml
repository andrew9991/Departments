@model Department

<div class="modal fade" id="editDepartment">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class=" = modal-header">
                <h4 class="modal-title" id="editDepartmentLabel">Edit Department</h4>
                <button type="button" class="close" data-dismiss = "modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Edit">
                    <div class="form-group">
                        <label asp-for = "Name" class="form-label"></label>
                        <input asp-for = "Name" />
                        <span asp-validation-for = "Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for = "Description" class="form-label"></label>
                        <input asp-for = "Description" />
                        <span asp-validation-for = "Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for = "Limit" class="form-label"></label>
                        <input asp-for = "Limit" />
                        <span asp-validation-for = "Limit" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss = "modal">Close</button>
                <button type="button" class="btn btn-primary" data-save= "modal">Update</button>
            </div>
        </div>
    </div>
</div>